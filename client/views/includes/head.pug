head
	meta(charset='utf-8')

	if headTitle
		title= headTitle
	meta(name='description' content=headDescription)

	+meta('viewport')
	+meta('keywords')
	+meta('author')

	+link('author')
	+link('icon')

	+meta('google')

	+link('apple-touch-icon')
	+meta('apple-mobile-web-app-capable')
	+meta('apple-mobile-web-app-status-bar-style')
	+meta('apple-mobile-web-app-title')

	block manifest

	+meta('theme-color')

	//- Styles
	+link('stylesheet')

	//- Scripts
	script&attributes(main.head.script.fontAwesome)
	script&attributes(main.head.script.jQuery)
	script&attributes(main.head.script.moment)