mixin strongLink(link, text)
	a(href=link) #[strong #{text}]

mixin userImage(user, big=false)
	span.player(id=user)
		code(style=`font-size: ${big ? '1.4' : '1.2'}rem; font-weight: bold;`)= user
		a(href=`https://namemc.com/profile/${user}` target='_blank'): img(src=`https://minotar.net/armor/bust/${user}/${big ? '175' : '125'}.png` alt=user)

mixin faq(q, a)
	.faq
		.row
			.col-1: strong Q:&nbsp;&nbsp;
			.col-11!= q
		.row
			.col-1: strong A:&nbsp;&nbsp;
			.col-11!= a
	br
